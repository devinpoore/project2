<style>
    
    #yourPost{
        position: absolute;
        top: 100px;
        left: 68%;
    }
    ul{
        
        position: absolute;
        top: 200px;
        right: 100px;
        font-size: 150%;
    }
    .deletePost{
        float:right;
        position: absolute;
        top: 400px;
        left: 68%;
        font-size: 150%;
    }
    .updatePost{
        float:right;
        position: absolute;
        top: 400px;
        right: 10%;
        font-size: 150%;
    }
    #userinfo{
         text-indent: 20px;
    }
    #useracct{
         text-indent: 40px;
    }
</style>
<div id="userinfo">
<br>
    <h3 id="useracct">Account Information</h3>

    <br>
    <br>
    <p>
        <h4><i class="fas fa-user prefix"></i> Name: {{account.firstName}} {{account.lastName}}</h4><br>
    </p>
    <h4><i class="fas fa-user prefix"></i> Username: {{account.userName}}</h4><br>
    <h4><i class="fas fa-envelope prefix"></i> Email: {{account.email}}</h4><br>
    <h4><i class="fas fa-phone prefix"></i> Phone Number: {{account.phoneNumber}}</h4><br>
    <h4><i class="fas fa-map-marked-alt prefix"></i> Street Address: {{account.streetAddress}}</h4><br>
</div>
<h3 id="yourPost">Your Post</h3><br>
{{#each listings}}
<div id={{this.dataValues.id}}>
    <ul>

        <li>Pet Name: {{this.dataValues.petName}}</li>
        <li>Breed: {{this.dataValues.breed}}</li>
        <li>Gender: {{this.dataValues.gender}}</li>
        <li>Animal Type: {{this.dataValues.animalType}}</li>
        <li>Comment/Description: {{this.dataValues.comments}}</li>

    </ul>
    <button class="btn blue-gradient btn-lg deletePost" post-id={{this.dataValues.id}}>Delete</button>
    <button class="btn blue-gradient btn-lg updatePost">Update</button>
</div>


{{/each}}


  <script type="text/javascript" src="/js/account.js"></script>
